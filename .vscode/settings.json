{
    // Formatação automática ao salvar para manter o padrão do projeto [3, 7]
    // Esconde pastas de cache e ambiente virtual para limpar o Explorer [4, 8]
    "files.exclude": {
        "**/__pycache__": false,
        "**/.pytest_cache": false,
        "**/.venv": false,
        "**/.git": false
    },
    // Configurações específicas para arquivos Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    // Configurações gerais do PYTHON
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    // Garante que o terminal use o ambiente virtual do Poetry automaticamente
    "python.terminal.activateEnvironment": true,
    // Habilita a análise de código e sugestões inteligentes [5, 6]
    "python.analysis.typeCheckingMode": "basic",
    // Seleciona o interpretador Python (o VS Code geralmente detecta o venv do Poetry)
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    }
}